<% if cat.persisted? %>
  <% action_url = cat_url(cat)%>
<% else %>
  <% action_url = cats_url %>
<% end %>



<form action="<%= action_url %>" method="post">
  <% if cat.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%=cat.name%>">

  <label for="sex">Sex: </label>
  Female<input type="radio" name="cat[sex]" value="F" <%= cat.sex=="F" ? "checked" : ""  %>>
  Male<input type="radio" name="cat[sex]" value="M" <%= cat.sex=="M" ? "checked" : ""  %>>

  <label for="birth_date">Birthday</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%=cat.birth_date%>">


  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled <%= cat.color ? "" : "selected" %>>--Select a Color--</option>

   <option value="black" <%= cat.color == "black" ? "selected" : "" %>>black</option>
   <option value="white" <%= cat.color == "white"? "selected" : "" %>>white</option>
   <option value="brown" <%= cat.color == "brown" ? "selected" : "" %>>brown</option>
   <option value="grey"  <%= cat.color == "grey" ? "selected" : "" %>>grey</option>
   <option value="orange"<%= cat.color == "orange" ? "selected" : "" %>>orange</option>

  </select>

  <label>Description
    <textarea name="cat[description]"><%= cat.description %></textarea>
  </label>

  <input type="submit" value="<%= cat.persisted? ? 'update cat' : 'add cat'%>">

</form>
